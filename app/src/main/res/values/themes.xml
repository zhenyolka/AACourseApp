<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AACourseApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/backgroundGray</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AACourseApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AACourseApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AACourseApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.AACourseApp.MovieNameText">
        <item name="android:textSize">@dimen/movie_name_text_size</item>

        <item name="android:fontFamily">sans-serif-black</item>

        <item name="android:lineSpacingExtra">@dimen/movie_name_text_line_spacing_extra</item>

        <item name="android:textAllCaps">false</item>

        <item name="android:letterSpacing" tools:targetApi="lollipop">-0.01</item>

        <item name="android:textColor">@color/partialWhite</item>

        <item name="android:shadowColor">@color/textShadowColor</item>

        <item name="android:shadowDx">0</item>

        <item name="android:shadowDy">6</item>

        <item name="android:shadowRadius">12</item>
    </style>

    <style name="Theme.AACourseApp.BackButtonText">
        <item name="android:textSize">@dimen/back_button_text_size</item>

        <item name="android:fontFamily">sans-serif-light</item>

        <item name="android:lineSpacingExtra">@dimen/back_button_text_line_spacing_extra</item>

        <item name="android:textAllCaps">false</item>

        <item name="android:textColor">@color/white</item>

        <item name="android:alpha">0.5</item>

        <item name="android:shadowColor">@color/textShadowColor</item>
    </style>

    <style name="Theme.AACourseApp.PGText">
        <item name="android:textSize">@dimen/pg_text_size</item>

        <item name="android:fontFamily">sans-serif-black</item>

        <item name="android:lineSpacingExtra">@dimen/pg_text_line_spacing_extra</item>

        <item name="android:textAllCaps">false</item>

        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.AACourseApp.TagsText">
        <item name="android:textSize">@dimen/tags_text_size</item>

        <item name="android:fontFamily">sans-serif-light</item>

        <item name="android:lineSpacingExtra">@dimen/tags_text_line_spacing_extra</item>

        <item name="android:textAllCaps">false</item>

        <item name="android:textColor">@color/tagsRed</item>
    </style>

    <style name="Theme.AACourseApp.ReviewsText">
        <item name="android:textSize">@dimen/reviews_text_size</item>

        <item name="android:fontFamily">sans-serif-black</item>

        <item name="android:lineSpacingExtra">@dimen/reviews_text_line_spacing_extra</item>

        <item name="android:textAllCaps">false</item>

        <item name="android:textColor">@color/reviewsGray</item>
    </style>

    <style name="Theme.AACourseApp.StorylineNameText">
        <item name="android:textSize">@dimen/storyline_name_text_size</item>

        <item name="android:fontFamily">sans-serif-black</item>

        <item name="android:lineSpacingExtra">@dimen/storyline_name_text_line_spacing_extra</item>

        <item name="android:textAllCaps">false</item>

        <item name="android:textColor">@color/partialWhite</item>

        <item name="android:shadowColor">@color/textShadowColor</item>

        <item name="android:shadowDx">0</item>

        <item name="android:shadowDy">6</item>

        <item name="android:shadowRadius">12</item>
    </style>

    <style name="Theme.AACourseApp.StorylineTextText">
        <item name="android:textSize">@dimen/storyline_text_text_size</item>

        <item name="android:fontFamily">sans-serif-light</item>

        <item name="android:lineSpacingExtra">@dimen/storyline_text_text_line_spacing_extra</item>

        <item name="android:textAllCaps">false</item>

        <item name="alpha">0.75</item>

        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.AACourseApp.CastNameText">
        <item name="android:textSize">@dimen/cast_text_size</item>

        <item name="android:fontFamily">sans-serif-black</item>

        <item name="android:lineSpacingExtra">@dimen/cast_text_line_spacing_extra</item>

        <item name="android:textAllCaps">false</item>

        <item name="android:letterSpacing" tools:targetApi="lollipop">-0.01</item>

        <item name="android:textColor">@color/partialWhite</item>

        <item name="android:shadowColor">@color/textShadowColor</item>

        <item name="android:shadowDx">0</item>

        <item name="android:shadowDy">6</item>

        <item name="android:shadowRadius">12</item>
    </style>

    <style name="Theme.AACourseApp.ActorNameText">
        <item name="android:textSize">@dimen/actor_text_size</item>

        <item name="android:fontFamily">sans-serif-black</item>

        <item name="android:lineSpacingExtra">4sp</item>

        <item name="android:textAllCaps">false</item>

        <item name="android:textColor">@color/actorNameGray</item>
    </style>

    <style name="Theme.AACourseApp.MovieRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:numStars">5</item>
        <item name="android:stepSize">1</item>
        <item name="android:progressDrawable">@drawable/ratingbar_red</item>
        <item name="android:minHeight">@dimen/movie_bar_height</item>
        <item name="android:maxHeight">@dimen/movie_bar_height</item>
    </style>
</resources>