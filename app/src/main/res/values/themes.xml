<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AACourseApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/backgroundGray</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AACourseApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AACourseApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AACourseApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.AACourseApp.MovieNameText">
        <item name="android:textSize">40sp</item>

        <item name="android:fontFamily">sans-serif-black</item>

        <item name="android:lineSpacingExtra">0sp</item>

        <item name="android:textAllCaps">false</item>

        <item name="android:letterSpacing" tools:targetApi="lollipop">-0.01</item>

        <item name="android:textColor">@color/partialWhite</item>

        <item name="android:shadowColor">#80000000</item>

        <item name="android:shadowDx">0</item>

        <item name="android:shadowDy">6</item>

        <item name="android:shadowRadius">12</item>
    </style>

    <style name="Theme.AACourseApp.BackButtonText">
        <item name="android:textSize">12sp</item>

        <item name="android:fontFamily">sans-serif-light</item>

        <item name="android:lineSpacingExtra">4sp</item>

        <item name="android:textAllCaps">false</item>

        <item name="android:textColor">@color/white</item>

        <item name="android:alpha">0.5</item>

        <item name="android:shadowColor">#80000000</item>
    </style>

    <style name="Theme.AACourseApp.PGText">
        <item name="android:textSize">12sp</item>

        <item name="android:fontFamily">sans-serif-black</item>

        <item name="android:lineSpacingExtra">2.06sp</item>

        <item name="android:textAllCaps">false</item>

        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.AACourseApp.TagsText">
        <item name="android:textSize">14sp</item>

        <item name="android:fontFamily">sans-serif-light</item>

        <item name="android:lineSpacingExtra">6sp</item>

        <item name="android:textAllCaps">false</item>

        <item name="android:textColor">@color/tagsRed</item>
    </style>

    <style name="Theme.AACourseApp.ReviewsText">
        <item name="android:textSize">14sp</item>

        <item name="android:fontFamily">sans-serif-black</item>

        <item name="android:lineSpacingExtra">6sp</item>

        <item name="android:textAllCaps">false</item>

        <item name="android:textColor">@color/reviewsGray</item>
    </style>

    <style name="Theme.AACourseApp.StorylineNameText">
        <item name="android:textSize">14sp</item>

        <item name="android:fontFamily">sans-serif-black</item>

        <item name="android:lineSpacingExtra">6sp</item>

        <item name="android:textAllCaps">false</item>

        <item name="android:textColor">@color/partialWhite</item>

        <item name="android:shadowColor">#80000000</item>

        <item name="android:shadowDx">0</item>

        <item name="android:shadowDy">6</item>

        <item name="android:shadowRadius">12</item>
    </style>

    <style name="Theme.AACourseApp.StorylineTextText">
        <item name="android:textSize">14sp</item>

        <item name="android:fontFamily">sans-serif-light</item>

        <item name="android:lineSpacingExtra">6sp</item>

        <item name="android:textAllCaps">false</item>

        <item name="alpha">0.75</item>

        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.AACourseApp.CastNameText">
        <item name="android:textSize">14sp</item>

        <item name="android:fontFamily">sans-serif-black</item>

        <item name="android:lineSpacingExtra">8sp</item>

        <item name="android:textAllCaps">false</item>

        <item name="android:letterSpacing" tools:targetApi="lollipop">-0.01</item>

        <item name="android:textColor">@color/partialWhite</item>

        <item name="android:shadowColor">#80000000</item>

        <item name="android:shadowDx">0</item>

        <item name="android:shadowDy">6</item>

        <item name="android:shadowRadius">12</item>
    </style>

    <style name="Theme.AACourseApp.ActorNameText">
        <item name="android:textSize">12sp</item>

        <item name="android:fontFamily">sans-serif-black</item>

        <item name="android:lineSpacingExtra">4sp</item>

        <item name="android:textAllCaps">false</item>

        <item name="android:textColor">@color/actorNameGray</item>
    </style>

    <style name="Theme.AACourseApp.MovieRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:numStars">5</item>
        <item name="android:stepSize">1</item>
        <item name="android:progressDrawable">@drawable/ratingbar_red</item>
        <item name="android:minHeight">12dp</item>
        <item name="android:maxHeight">12dp</item>
    </style>
</resources>